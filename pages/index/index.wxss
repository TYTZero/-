/**index.wxss**/
.container {
  padding: 20rpx;
  background: linear-gradient(to bottom, #458ada, #b1cde2);
  color: #fff;
}
/* 搜索框 */
.search {
  display: flex;
  border: 1px solid #ccc;
  border-radius: 99px;
  background-color: #fff;
  justify-content: space-between;
  align-items: center;
}
.search input {
  width: 75%;
  color: #333;
  padding: 0 20rpx;
}
.search button {
  width: 25%;
  border: 0;
  border-radius: 99px;
}
/* 实时天气 */
.weather {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  padding: 10rpx 0;
  align-items: center;
}
.realtime-name {
  font-size: 50rpx;
}
.weather-item {
  display: flex;
  gap: 40rpx;
  align-items: center;
}
/* 图像大小 */
.weather-icon image {
  width: 100rpx;
  height: 100rpx;
}
.realtime-text,
.weather-temp {
  font-size: 40rpx;
}
.weather-other {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  text-align: center;
}
.other-item {
  width: 33.3%;
  margin: 10px 0;
}
.other-title {
  font-size: 34rpx;
  margin-bottom: 10rpx;
}
.daily {
  margin: 10rpx 0;
}
